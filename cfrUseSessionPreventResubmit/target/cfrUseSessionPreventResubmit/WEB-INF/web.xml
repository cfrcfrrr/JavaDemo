<!DOCTYPE web-app PUBLIC
        "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
        "http://java.sun.com/dtd/web-app_2_3.dtd" >

<web-app>
    <display-name>Archetype Created Web Application</display-name>
    <!--这里还必须先把servlet全定义了，再全部定义servlet-mapping，不能错开-->
    <servlet>
        <servlet-name>DoFormServlet</servlet-name>
        <servlet-class>usesessionpreventresubmitdemo.DoFormServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>FormServlet</servlet-name>
        <servlet-class>usesessionpreventresubmitdemo.FormServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>DoFormServlet</servlet-name>
        <url-pattern>/servlet/DoFormServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>FormServlet</servlet-name>
        <url-pattern>/servlet/FormServlet</url-pattern>
    </servlet-mapping>
</web-app>